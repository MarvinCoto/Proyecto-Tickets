<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:backgroundTint="#F01E1E"

    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp"
    tools:context=".activity_card_tickets">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtTituloCard"
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/adlam_display"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgEditar"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_editar" />

        <ImageView
            android:id="@+id/imgBorrar"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_eliminar" />

        <TextView
            android:id="@+id/txtEstadoCard"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:fontFamily="@font/adlam_display"
            android:text="TextView"
            android:textColor="#3AF22C"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>